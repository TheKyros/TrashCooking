<p id="notice"><%= notice %></p>

<h1>Liste des categories</h1>

<table class="table table-condensed" style="width: 500px;">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td class="text-center">
        <%= link_to category do %> 
        <span class="glyphicon glyphicon-eye-open" style="color:green"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to edit_category_path(category) do %> 
        <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash" style="color:red"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une categorie', new_category_path %>
