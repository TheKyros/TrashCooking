<p id="notice"><%= notice %></p>

<h1><%= @category.name %></h1>

<table class="table table-condensed" style="width: 500px;">
  <thead>
    <tr>
      <th>Aliments</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @category.foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td class="text-center">
        <%= link_to category_food_path(@category, food) do %> 
        <span class="glyphicon glyphicon-eye-open" style="color:green"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to edit_category_food_path(@category, food) do %> 
        <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to category_food_path(@category, food), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash" style="color:red"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<p><%= f.association :author,
                  collection: User.all,
                  include_blank: true,
                  input_html: { class: 'chosen-select' }
%></p>

<p>
<%= link_to 'Ajouter un aliment', new_category_food_path(@category) %>
</p>

<p><%= link_to 'Modifier la catégorie', edit_category_path(@category) %></p>
<p><%= link_to 'Retour à lalsite de catégories', categories_path %></p>
